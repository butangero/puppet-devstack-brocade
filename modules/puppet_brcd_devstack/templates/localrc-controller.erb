# OPENSTACK CONTROLLER NODE

HOST_IP=<%= mgmt_ip %>

DATABASE_PASSWORD=password
ADMIN_PASSWORD=password
SERVICE_PASSWORD=password
SERVICE_TOKEN=password
RABBIT_PASSWORD=password

# Use OpenStack Grizzly
NOVA_BRANCH=stable/grizzly
CINDER_BRANCH=stable/grizzly
GLANCE_BRANCH=stable/grizzly
HORIZON_BRANCH=stable/grizzly
KEYSTONE_BRANCH=stable/grizzly
QUANTUM_BRANCH=stable/grizzly

disable_service n-net
enable_service q-svc
enable_service q-agt
enable_service q-dhcp
enable_service q-l3
enable_service q-meta
enable_service quantum

# Enable brocade quantum plugin
Q_PLUGIN=brocade
VCS_USERNAME=<%= vcs_username %>
VCS_PASSWORD=<%= vcs_password %>
VCS_IPADDR=<%= vcs_ipaddr %>
BRCD_PHYSICAL_INTERFACE=<%= tenant_int %>

DEST=/opt/stack
SCREEN_LOGDIR=$DEST/logs/screen
LOG=True
LOGFILE=stack.sh.log
LOGDAYS=1

# For Keystone
KEYSTONE_TOKEN_FORMAT=PKI

SCREEN_HARDSTATUS="%{= Kw}%-w%{BW}%n %t%{-}%+w"

